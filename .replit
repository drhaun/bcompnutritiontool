modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Sync Integration Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Complete Workflow Test"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_simple.py --server.port 5000 --server.headless true"
waitForPort = 5000

[[workflows.workflow]]
name = "Sync Integration Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run test_sync_integration.py --server.port 5000 --server.headless true"
waitForPort = 5000

[[workflows.workflow]]
name = "Complete Workflow Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run test_complete_workflow.py --server.port 5000 --server.headless true"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
